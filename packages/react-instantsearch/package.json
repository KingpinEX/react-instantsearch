{
  "name": "react-instantsearch",
  "version": "5.0.1",
  "description": "âš¡ Lightning-fast search for React and React Native apps, by Algolia",
  "main": "index.js",
  "module": "es/index.js",
  "sideEffects": false,
  "license": "MIT",
  "homepage": "https://community.algolia.com/react-instantsearch",
  "repository": {
    "type": "git",
    "url": "https://github.com/algolia/react-instantsearch"
  },
  "author": {
    "name": "Algolia, Inc.",
    "url": "https://www.algolia.com"
  },
  "keywords": [
    "algolia",
    "components",
    "fast",
    "instantsearch",
    "react",
    "react-dom",
    "react-native",
    "search"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build": "yarn build:cjs && yarn build:es && yarn build:umd",
    "build:cjs": "babel src --out-dir dist --ignore __tests__,__mocks__ --quiet",
    "build:es": "BABEL_ENV=es babel src --out-dir dist/es --ignore __tests__,__mocks__ --quiet",
    "build:umd": "BABEL_ENV=es rollup -c rollup.config.js",
    "test": "jest",
    "test:size": "bundlesize",
    "preparePackageFolder": "mkdir -p dist && cp {package.json,README.md} dist",
    "release": "yarn clean && yarn preparePackageFolder && yarn build && cd dist && yarn pack",
    "release:beta": "yarn clean && yarn preparePackageFolder && yarn build && cd dist && yarn pack --tag beta"
  },
  "dependencies": {
    "react-instantsearch-core": "^5.0.1",
    "react-instantsearch-dom": "^5.0.1",
    "react-instantsearch-native": "^5.0.1"
  },
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-core": "6.26.0",
    "babel-plugin-external-helpers": "6.22.0",
    "babel-plugin-inline-json-import": "0.2.1",
    "babel-plugin-lodash": "3.3.2",
    "babel-plugin-transform-react-jsx-source": "6.22.0",
    "babel-preset-env": "1.6.1",
    "babel-preset-react": "6.24.1",
    "babel-preset-stage-2": "6.24.1",
    "bundlesize": "0.17.0",
    "rollup": "0.57.1",
    "rollup-plugin-babel": "3.0.3",
    "rollup-plugin-commonjs": "9.1.0",
    "rollup-plugin-filesize": "1.5.0",
    "rollup-plugin-node-globals": "1.2.0",
    "rollup-plugin-node-resolve": "3.3.0",
    "rollup-plugin-replace": "2.0.0",
    "rollup-plugin-uglify": "3.0.0"
  },
  "jest": {
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "bundlesize": [
    {
      "path": "dist/umd/Core.min.js",
      "maxSize": "40 kB"
    },
    {
      "path": "dist/umd/Connectors.min.js",
      "maxSize": "40 kB"
    },
    {
      "path": "dist/umd/Dom.min.js",
      "maxSize": "63 kB"
    }
  ]
}
